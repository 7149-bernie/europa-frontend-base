{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // originally: true
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true, // originally: true
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Type declaration */
    // "declaration": true,
    // "declarationDir": "dist/types",
    // "declarationMap": false,
    // "emitDeclarationOnly": true, // false -> writes the type .d.ts files ; true -> writes the main code files

    /* Additional configuration */
    // "diagnostics": false,
    // "outDir": "dist",
  },
  "include": ["src", "lib"] // alternative: ["src/**/*.ts", "test/**/*.ts"]
  // originally: "include": ["src", "lib"] // alternative: ["src/**/*.ts", "test/**/*.ts"]
}
